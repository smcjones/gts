{
  "extends": "./tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": [
    "eslint.config.js",
    "eslint.ignores.js",
    "src/**/*.js",
    "src/**/*.ts",
    "test/**/*.ts",
    "dist/**/*.js",
    "package.json",
    "tsup.config.ts"
  ],
  "exclude": ["test/fixtures/**/*.*", "template/**/*.*"]
}
